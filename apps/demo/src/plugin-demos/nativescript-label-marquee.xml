<Page xmlns="http://schemas.nativescript.org/tns.xsd"
  navigatingTo="navigatingTo" class="page"
  xmlns:lm="@robernator/nativescript-label-marquee">
  <Page.actionBar>
    <ActionBar title="LabelMarquee" class="action-bar">
    </ActionBar>
  </Page.actionBar>
  <StackLayout class="p-20">
    <ScrollView class="h-full">
      <StackLayout>
     
        <lm:LabelMarquee 
          fadeLength="20" 
          scrollDuration="20"
          labelize="{{true}}"
          text="Lorem Ipsum; this is a long string of text that will animate because it's longer than the width of the view."
          >
        </lm:LabelMarquee>
    
      </StackLayout>
    </ScrollView>
  </StackLayout>
</Page>